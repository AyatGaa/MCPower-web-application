@model Domain.Abstractions.Products

@{
    ViewData["Title"] = "Create";
}


<!DOCTYPE html>
<html>
<head>
  <title>Create Form - CSS</title>
  <style>
    .form-container {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .form-content {
      width: 300px;
    }
  </style>
</head>
<body>
  <div class="form-container">
    <div class="form-content">
     

      @{
          ViewData["Title"] = "Create";
      }

      <h1>Create</h1>

      <h4>Products</h4>
      <hr />

      <div class="row">
        <div class="col-md-12">
          <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
              <label asp-for="ProductName" class="control-label"></label>
              <input asp-for="ProductName" class="form-control" />
              <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
              <label asp-for="Description" class="control-label"></label>
              <input asp-for="Description" class="form-control" />
              <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
              <label asp-for="ProductPrice" class="control-label"></label>
              <input asp-for="ProductPrice" class="form-control" />
              <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
              <label asp-for="ProductQuantity" class="control-label"></label>
              <input asp-for="ProductQuantity" class="form-control" />
              <span asp-validation-for="ProductQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
              <label asp-for="Date" class="control-label"></label>
              <input asp-for="Date" class="form-control" />
              <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
              <input type="submit" value="Add Product" class="btn btn-primary" />
            </div>
          </form>
        </div>
      </div>

      <div>
        <hr />
        <a asp-action="Show" asp-route-id="Model.ProductID" class="btn btn-outline-success"><i class="bi bi-skip-backward-fill"></i> Back to List</a>
      </div>
    </div>
  </div>
</body>
</html>






 