@model Domain.Abstractions.Products

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Details</h1>

            <div>
                <h4>Products</h4>
                <hr />
                <dl class="row">
                    <div>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ProductId)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductId)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ProductName)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductName)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Description)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ProductPrice)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductPrice)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ProductQuantity)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductQuantity)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Date)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Date)
                        </dd>
                    </div>
                </dl>
            </div>
            <div>
                <hr />
                <a asp-action="Show" asp-route-id="Model.ProductID" class="btn btn-outline-success"><i class="bi bi-skip-backward-fill"></i> Back to List</a>
            </div>
        </div>
    </div>
</div>



 